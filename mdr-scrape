from bs4 import BeautifulSoup
from urllib.request import Request, urlopen
import re

import wget

url = "https://www.mdr.de/sport/ergebnisse/fussball-dritte-liga-108.html"

req = Request(url)
html_page = urlopen(req)

soup = BeautifulSoup(html_page, "lxml")

Spieltag = []
"""
