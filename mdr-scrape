HeimTeam = ""
GastTeam = ""

for x in soup.findAll("div", class_="match"):
    for y in x.select('td[class*="heim tid"]'):
        varheim = str(y)
        HeimTeam = varheim.split('>')
        HeimTeam = HeimTeam[1]
        HeimTeam = HeimTeam.split('<')
        HeimTeam = HeimTeam[0]

    for z in x.select('td[class*="gast tid"]'):
        vargast = str(z)
        GastTeam = vargast.split('>')
        GastTeam = GastTeam[1]
        GastTeam = GastTeam.split('<')
        GastTeam = GastTeam[0]

    print(HeimTeam +" : " + GastTeam)
    print()





